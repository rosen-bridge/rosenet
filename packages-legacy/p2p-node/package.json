    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.7.1",
    "typescript": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.12.0"
