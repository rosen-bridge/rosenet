    "@libp2p/mplex": "^7.1.1",
    "@libp2p/peer-id-factory": "^1.0.19",
    "@libp2p/pubsub-peer-discovery": "^7.0.1",
    "@libp2p/websockets": "^5.0.2",
    "@multiformats/multiaddr": "^11.0.3",
    "@rosen-bridge/json-bigint": "^0.1.0",
