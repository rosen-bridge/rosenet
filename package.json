{
  "name": "@rosen-bridge/rosenet",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "coverage": "npm run coverage --workspaces",
