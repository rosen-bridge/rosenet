    "@libp2p/pubsub-peer-discovery": "^7.0.1",
    "@libp2p/websockets": "^5.0.2",
    "libp2p": "^0.41.0",
    "uint8arrays": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-c8": "^0.26.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.7.1",
    "typescript": "^5.0.0",
    "vitest": "^0.26.2"
