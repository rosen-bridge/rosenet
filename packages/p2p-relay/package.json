{
  "name": "@rosen-bridge/p2p-relay",
  "version": "0.1.0",
  "description": "Rosen Bridge p2p relay, used inside relay service",
  "repository": "https://github.com/rosen-bridge/p2p",
  "license": "GPL-3.0",
  "author": "Rosen Team",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix . && npm run prettify",
